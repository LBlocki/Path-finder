<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.blocki.pathfinder.controllers.OptionButtonsController"
            prefHeight="400.0" prefWidth="300.0">

    <GridPane hgap="20.0" layoutX="40.0" layoutY="67.0" prefHeight="195.0" prefWidth="261.0" vgap="30.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="124.0" minWidth="0.0" prefWidth="99.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="10.0" prefWidth="101.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <RadioButton mnemonicParsing="false" selected="true" text="Dijkstra" onMouseClicked="#algorithmButtonPressed">
            <toggleGroup>
                <ToggleGroup fx:id="algorithms" />
            </toggleGroup>
        </RadioButton>
        <RadioButton mnemonicParsing="false" text="Greedy" toggleGroup="$algorithms" GridPane.columnIndex="1"
                     onMouseClicked="#algorithmButtonPressed"/>
        <RadioButton mnemonicParsing="false" text="BFS" toggleGroup="$algorithms" GridPane.rowIndex="1"
                     onMouseClicked="#algorithmButtonPressed"/>
        <RadioButton mnemonicParsing="false" text="A_star" toggleGroup="$algorithms" GridPane.columnIndex="1"
                     GridPane.rowIndex="1"  onMouseClicked="#algorithmButtonPressed"/>
        <RadioButton mnemonicParsing="false" text="DFS" toggleGroup="$algorithms" GridPane.rowIndex="2"
                     onMouseClicked="#algorithmButtonPressed"/>
        <RadioButton mnemonicParsing="false" text="JPS" toggleGroup="$algorithms" GridPane.columnIndex="1"
                     GridPane.rowIndex="2"  onMouseClicked="#algorithmButtonPressed"/>
    </GridPane>
    <Pane prefHeight="40.0" prefWidth="300.0">
        <Text layoutX="68.0" layoutY="47.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Choose algorithm">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </Text>
    </Pane>
    <Line endX="149.0" endY="-46.0" layoutX="131.0" layoutY="321.0" startX="-112.0" startY="-46.0"/>
    <Text layoutX="65.0" layoutY="310.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Additional Options">
        <font>
            <Font name="System Bold" size="18.0"/>
        </font>
    </Text>
    <Line endX="139.0" endY="-46.0" layoutX="141.0" layoutY="551.0" startX="-123.0" startY="-46.0"/>
    <VBox layoutX="19.0" layoutY="345.0" prefHeight="163.0" prefWidth="124.0" spacing="30.0">
        <CheckBox mnemonicParsing="false" text="Diagonal search"
                  onMouseClicked="#diagonalSearchBoxPressed"/>
        <CheckBox  mnemonicParsing="false" text="Instant search"
                  onMouseClicked="#instantSearchBoxPressed"/>
        <CheckBox  mnemonicParsing="false" text="Don't cut corners"
                  onMouseClicked="#DontCutCornersBoxClicked"/>
    </VBox>
    <VBox layoutX="161.0" layoutY="374.0" prefHeight="200.0" prefWidth="100.0" spacing="15.0">
        <RadioButton mnemonicParsing="false" selected="true" text="Manhattan" onMouseClicked="#heuristicsButtonPressed">
            <toggleGroup>
                <ToggleGroup fx:id="heuristics"/>
            </toggleGroup>
        </RadioButton>
        <RadioButton mnemonicParsing="false" text="Euclidean" toggleGroup="$heuristics"
                     onMouseClicked="#heuristicsButtonPressed"/>
        <RadioButton mnemonicParsing="false" text="Chebyshev" toggleGroup="$heuristics"
                     onMouseClicked="#heuristicsButtonPressed"/>
    </VBox>
    <Text layoutX="161.0" layoutY="361.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Heuristics:">
        <font>
            <Font name="System Bold" size="15.0"/>
        </font>
    </Text>
    <Line endX="4.0" endY="159.0" layoutX="141.0" layoutY="331.0" startX="4.0" startY="-4.0"/>


</AnchorPane>
