<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.shape.Line?>
<AnchorPane fx:controller="com.blocki.pathfinder.controllers.BoardController" prefHeight="800.0" prefWidth="1200.0"
            xmlns="http://javafx.com/javafx" onKeyPressed="#keyPressed" onKeyReleased="#keyReleased"
            xmlns:fx="http://javafx.com/fxml">

    <Pane prefHeight="800.0" prefWidth="300.0">
        <fx:include source="OptionButtons.fxml" fx:id="options"/>
        <Line endX="4.0" endY="159.0" layoutX="141.0" layoutY="331.0" startX="4.0" startY="-4.0"/>
        <Line endX="153.0" endY="-338.0" layoutX="147.0" layoutY="338.0" startX="152.0" startY="462.0"/>
        <fx:include source="Slider.fxml"/>

        <HBox xmlns="http://javafx.com/javafx"
              xmlns:fx="http://javafx.com/fxml"
              layoutX="10.0" layoutY="554.0" prefHeight="98.0" prefWidth="290.0" spacing="10.0">
            <Button mnemonicParsing="false" prefHeight="60.0" prefWidth="86.0" text="Start"
                    onMouseClicked="#startPressed"/>
            <Button mnemonicParsing="false" prefHeight="60.0" prefWidth="86.0" text="Stop"
                    onMouseClicked="#pauseOrStopPressed" fx:id="stopPauseButton"/>
            <Button mnemonicParsing="false" prefHeight="60.0" prefWidth="86.0" text="Clear"
                    onMouseClicked="#clearPressed"/>
        </HBox>

    </Pane>
    <GridPane
            prefHeight="800.0" prefWidth="900.0" layoutX="315.0" layoutY="10"
            fx:id="board" onMouseClicked="#mousePressed" onMouseExited="#mouseLeft" onMouseEntered="#mouseEntered"
            onMouseDragged="#mousePressed">
    </GridPane>


</AnchorPane>