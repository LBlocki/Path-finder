<AnchorPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.blocki.pathfinder.controllers.MainController">
    <Pane prefHeight="800.0" prefWidth="300.0">
        <GridPane hgap="20.0" layoutX="40.0" layoutY="67.0" prefHeight="195.0" prefWidth="261.0" vgap="30.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="124.0" minWidth="0.0" prefWidth="99.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="10.0" prefWidth="101.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <RadioButton mnemonicParsing="false" selected="true" text="Dijkstra">
                <toggleGroup>
                    <ToggleGroup fx:id="algorithms"/>
                </toggleGroup>
            </RadioButton>
            <RadioButton mnemonicParsing="false" text="Greedy" toggleGroup="$algorithms" GridPane.columnIndex="1"/>
            <RadioButton mnemonicParsing="false" text="BFS" toggleGroup="$algorithms" GridPane.rowIndex="1"/>
            <RadioButton mnemonicParsing="false" text="A*" toggleGroup="$algorithms" GridPane.columnIndex="1"
                         GridPane.rowIndex="1"/>
            <RadioButton mnemonicParsing="false" text="DFS" toggleGroup="$algorithms" GridPane.rowIndex="2"/>
            <RadioButton mnemonicParsing="false" text="JPS" toggleGroup="$algorithms" GridPane.columnIndex="1"
                         GridPane.rowIndex="2"/>
        </GridPane>
        <Pane prefHeight="40.0" prefWidth="300.0">
            <Text layoutX="68.0" layoutY="47.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Choose algorithm">
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
            </Text>
        </Pane>
        <Line endX="149.0" endY="-46.0" layoutX="131.0" layoutY="321.0" startX="-112.0" startY="-46.0"/>
        <Text layoutX="65.0" layoutY="310.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Additional Options">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </Text>
        <Line endX="139.0" endY="-46.0" layoutX="141.0" layoutY="551.0" startX="-123.0" startY="-46.0"/>
        <VBox layoutX="19.0" layoutY="345.0" prefHeight="163.0" prefWidth="124.0" spacing="30.0">
            <CheckBox fx:id="diagonalSearch" mnemonicParsing="false" text="Diagonal search"/>
            <CheckBox fx:id="instantSearch" mnemonicParsing="false" text="Instant search"/>
            <CheckBox fx:id="dontCutCorners" mnemonicParsing="false" text="Don't cut corners"/>
        </VBox>
        <VBox layoutX="161.0" layoutY="374.0" prefHeight="200.0" prefWidth="100.0" spacing="15.0">
            <RadioButton mnemonicParsing="false" selected="true" text="Manhattan">
                <toggleGroup>
                    <ToggleGroup fx:id="heuristics"/>
                </toggleGroup>
            </RadioButton>
            <RadioButton mnemonicParsing="false" text="Euclidean" toggleGroup="$heuristics"/>
            <RadioButton mnemonicParsing="false" text="Chebyshev" toggleGroup="$heuristics"/>
        </VBox>
        <Text layoutX="161.0" layoutY="361.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Heuristics:">
            <font>
                <Font name="System Bold" size="15.0"/>
            </font>
        </Text>
        <Line endX="4.0" endY="159.0" layoutX="141.0" layoutY="331.0" startX="4.0" startY="-4.0"/>
        <Line endX="153.0" endY="-338.0" layoutX="147.0" layoutY="338.0" startX="152.0" startY="462.0"/>
        <HBox layoutX="10.0" layoutY="554.0" prefHeight="98.0" prefWidth="290.0" spacing="10.0">
            <Button mnemonicParsing="false" prefHeight="60.0" prefWidth="86.0" text="Start"/>
            <Button mnemonicParsing="false" prefHeight="60.0" prefWidth="86.0" text="Pause"/>
            <Button mnemonicParsing="false" prefHeight="60.0" prefWidth="86.0" text="Clear"/>
        </HBox>
        <Slider fx:id="slider" layoutX="12.0" layoutY="684.0" prefHeight="14.0" prefWidth="273.0"/>
        <Label fx:id="sliderLabel" layoutX="125.0" layoutY="649.0" prefHeight="24.0" prefWidth="48.0" text="Label">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <Text layoutX="65.0" layoutY="668.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Speed:">
            <font>
                <Font size="18.0"/>
            </font>
        </Text>
    </Pane>
    <GridPane fx:id="board" layoutX="300.0" prefHeight="800.0" prefWidth="900.0"/>
</AnchorPane>
